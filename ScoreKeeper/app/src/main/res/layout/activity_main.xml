<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tutwebhub.gurjas_portfolio.scorekeeper.MainActivity">

    <TextView
        android:id="@+id/text_view_team_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Enter Team Details:"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/linear_layout_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_team_details"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/name_team_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="4"
            android:hint="TEAM 1"
            android:inputType="textAutoCorrect"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="VS"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/name_team_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="4"
            android:hint="TEAM 2"
            android:inputType="textAutoCorrect"
            android:textAlignment="center" />

    </LinearLayout>

    <EditText
        android:id="@+id/number_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_team"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Number of Players"
        android:gravity="center"
        android:inputType="number" />

    <Button
        android:id="@+id/lets_play_cricket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_players"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:text="Lets Play"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/game_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/lets_play_cricket"
        android:text="Reset" />

</RelativeLayout>
